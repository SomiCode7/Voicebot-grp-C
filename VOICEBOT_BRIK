import os
import pyttsx3
import speech_recognition as sr
from google import genai
from google.genai import types

# ğŸšï¸ Configuration flags
voice_mode = False
client = genai.Client(api_key="GEMINI-APIKEY") 
model = "gemini-2.5-pro"
history = []

# ğŸ”Š Chunked Text-to-Speech Function
def speak_chunked(text):
    engine = pyttsx3.init()
    sentences = text.strip().split('. ')  # Split response by sentence
    for sentence in sentences:
        if sentence:
            engine.say(sentence)
            engine.runAndWait()
            choice = input("â¸ï¸ Type 'stop' to cancel voice playback or press Enter to continue: ").strip().lower()
            if choice == 'stop': #skip reading or interrupt the voice 
                engine.stop()
                print("ğŸ›‘ Voice playback stopped.")
                break

# ğŸ—£ï¸ Voice Recognition Function
def listen():
    recognizer = sr.Recognizer()
    with sr.Microphone() as source:
        print("ğŸ§\n Listening...")
        audio = recognizer.listen(source)
    try:
        return recognizer.recognize_google(audio)
    except sr.UnknownValueError:
        print("âŒ Didn't catch that.")
        return ""
    except sr.RequestError as e:
        print(f"âš ï¸ Error: {e}")
        return ""

# ğŸ’¬ Gemini Instructions 
config = types.GenerateContentConfig(
    thinking_config=types.ThinkingConfig(thinking_budget=-1),
    response_mime_type="text/plain",
    system_instruction=[
        types.Part.from_text(
            text="""Be friendly, warm, and clear. Help students with code in any programming language and tech career doubts. Keep responses concise unless asked for details. Encourage and support."""
        ),
    ],
)

print("âœ¨ Welcome to Gemini VoiceBot!")
print("Type 'speak on' to enable voice input or 'speak off' to return to text mode.\n")

# ğŸŒ€ Main Loop
while True:
    if voice_mode:
        question = listen()
        if not question:
            continue
        print(f"\nğŸ“ Transcribed: '{question}'")
        confirm = input("âœï¸ Press Enter to proceed  or type correction: ").strip()
        if confirm:
            question = confirm
    else:
        question = input("\nYou: ").strip()

    # ğŸšªTo  Exit  and End the COnversation  / Clear
    if question.lower() in ['exit', 'quit', 'bye']:
        print("Chatbot: Conversation ended! Catch you later ğŸ˜„")
        break
    if question.lower() == 'clear':
        history.clear()
        os.system('cls' if os.name == 'nt' else 'clear')
        print("Chatbot: History cleared and screen refreshed âœ¨")
        continue
    if not question:
        print("Chatbot: Type something or 'exit' to quit ğŸšª")
        continue

    # ğŸ›ï¸ Toggle Voice
    if question.lower() == 'speak on':
        voice_mode = True
        print("ğŸ”Š Voice mode activated.")
        continue
    if question.lower() == 'speak off':
        voice_mode = False
        print("ğŸ”‡ Voice mode deactivated.")
        continue

    # ğŸ§  Gemini API Call
    contents = history + [
        types.Content(role="user", parts=[types.Part.from_text(text=question)])
    ]

    try:
        response_text = ""
        for chunk in client.models.generate_content_stream(
            model=model,
            contents=contents,
            config=config,
        ):
            if chunk.text:
                response_text += chunk.text

        # ğŸ”‰ Speak first, then show text
        if voice_mode:
            speak_chunked(response_text.strip())

        print(f"\nChatbot: {response_text.strip()}")
        #Display Token Usage display after each request 
        print(f"ğŸ“Š Tokens used: {chunk.usage_metadata.total_token_count}")

        # ğŸ”— Update History
        history.extend([
            types.Content(role="user", parts=[types.Part.from_text(text=question)]),
            types.Content(role="model", parts=[types.Part.from_text(text=response_text)])
        ])

    except Exception as e:
        print(f"âŒ Error: {e}")
